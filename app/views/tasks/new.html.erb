<div class="container">
  <div class="small-container">
    <h1>New task</h1>
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
      <%= f.label :details %>
      <%= f.text_field :details, class:"form-control" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
